<Window x:Class="Geldautomaat.GeldOpnemenWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Geldautomaat"
        mc:Ignorable="d"
        Title="GeldOpnemenWindow"
        Height="450"
        Width="800"
        Background="#FFFFE082">
   
    <Grid>
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <TextBlock Text="Voer het bedrag in dat u wilt opnemen:"
                       FontSize="18"
                       Margin="0,0,0,10" />
            <TextBox x:Name="BedragTextBox"
                     Width="200"
                     FontSize="18"
                     Margin="0,0,0,10" />
            <Button Content="Opnemen"
                    FontSize="18"
                    Click="OpnemenButton_Click"
                    FontFamily="Arial"
                    FontWeight="Bold"
                    BorderBrush="#FFDAA520"
                    Background="#FFDAA520"
                    Foreground="White" />
        </StackPanel>
    </Grid>
</Window>
